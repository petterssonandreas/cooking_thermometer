{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "[Launch] Cortex",
            "cwd": "${workspaceFolder}",
            "executable": "build/zephyr/zephyr.elf",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "jlink",
            "interface": "swd",
            "svdFile": "STM32G0B0.svd",
            "device": "STM32G0B0KE",
            "gdbPath": "arm-zephyr-eabi-gdb.exe",
            "showDevDebugOutput": "raw",
        },
        {
            "name": "[Attach] Cortex",
            "cwd": "${workspaceFolder}",
            "executable": "build/zephyr/zephyr.elf",
            "request": "attach",
            "type": "cortex-debug",
            "servertype": "jlink",
            "interface": "swd",
            "svdFile": "STM32G0B0.svd",
            "device": "STM32G0B0KE",
            "gdbPath": "arm-zephyr-eabi-gdb.exe",
            "showDevDebugOutput": "raw",
        },
    ]
}
